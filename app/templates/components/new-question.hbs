{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="pregunta">Question</label>
        {{input value=pregunta id="pregunta"}}
      </div>

      <div class="form-group">
        <label for="additional">Additional Notes</label>
        {{input value=additional id="additional"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
