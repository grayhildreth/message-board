{{#if addNewQuestion}}
  <h1>New Question</h1>

  <div class="container">
    <form>
      <div class="form-group">
        <label for="pregunta">Question</label>
        {{input value=pregunta id="pregunta"}}
      </div>

      <div class="form-group">
        <label for="additional">Additional Notes</label>
        {{input value=additional id="additional"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button type="button" class="btn btn-danger" {{action 'saveQuestion1'}}>Post!</button>
    </form>
  </div>
{{else}}
  <div class="container">
  <button type="button" class="btn btn-danger" {{action 'questionFormShow'}}>New Question</button>
</div>
{{/if}}
