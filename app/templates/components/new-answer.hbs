{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="response">Answer</label>
        {{input value=response id="response"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button type="button" class="btn btn-danger" {{action 'saveAnswer'}}>Post!</button>
    </form>
  </div>
{{else}}
<div class="col-sm-6">
  <button type="button" class="btn btn-danger" {{action 'answerFormShow'}}>Answer Question</button>
</div>
{{/if}}
